<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewExoBold">
        <item name="fontPath">fonts/Exo-Bold.otf</item>
    </style>

    <style name="TextViewExoMedium">
        <item name="fontPath">fonts/Exo-Medium.otf</item>
    </style>

    <style name="TextViewExoRegular">
        <item name="fontPath">fonts/Exo-Regular.otf</item>
    </style>

    <style name="scenarioButton">
        <item name="android:textSize">13dp</item>
        <item name="fontPath">fonts/Exo-Regular.otf</item>
        <item name="colorAccent">#EFEFF4</item>
        <item name="android:textColor">#404040</item>
    </style>

</resources>
